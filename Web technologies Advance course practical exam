  <h2> Task Buttons</h2>


  <button onclick="task1()">Task 1: String Manipulation</button>
  <button onclick="task2()">Task 2: Signup Form</button>
  <button onclick="task3()">Task 3: Person Object</button>
  <button onclick="task4()">Task 4: Countdown Timer</button>
  <button onclick="task5()">Task 5: Math Operation</button>
  <button onclick="task6()">Task 6: Array Management</button>
  <button onclick="task7()">Task 7: Double Array</button>
  <button onclick="task8()">Task 8: 10th Character</button>
  <button onclick="task9()">Task 9: Last Array Element</button>
  <button onclick="task10()">Task 10: Splice Example</button>

  <script>
    function task1() {
      let input = prompt("Enter a string:");
      if (!input) return;
      let reversed = input.split('').reverse().join('');
      alert(`Reversed: ${reversed}\n3rd Char: ${input[2] || ''}\n4th Char: ${input[3] || ''}`);
    }

    function task2() {
      let name = prompt("Enter your name:");
      alert(`You entered: ${name}`);
    }

    function task3() {
      let person = { name: "Alice", age: 25, gender: "Female" };
      alert(`Name: ${person.name}\nAge: ${person.age}\nGender: ${person.gender}`);
    }

    let timer;
    let seconds = 0;

    function task4() {
      const action = prompt("Choose action: start, pause, reset");
      if (action === "start") {
        timer = setInterval(() => console.log("Time: " + (++seconds)), 1000);
        alert("Timer started (check console)");
      } else if (action === "pause") {
        clearInterval(timer);
        alert("Timer paused");
      } else if (action === "reset") {
        clearInterval(timer);
        seconds = 0;
        alert("Timer reset");
      } else {
        alert("Invalid action");
      }
    }

    function task5() {
      let a = parseFloat(prompt("Enter first number:"));
      let b = parseFloat(prompt("Enter second number:"));
      let op = prompt("Enter operation (add, subtract, multiply, divide):");
      let result;
      switch(op) {
        case "add": result = a + b; break;
        case "subtract": result = a - b; break;
        case "multiply": result = a * b; break;
        case "divide": result = b !== 0 ? a / b : "Cannot divide by zero"; break;
        default: result = "Invalid operation";
      }
      alert(`Result: ${result}`);
    }

    function task6() {
      let fruits = ["apple", "banana", "mango"];
      fruits.push("grape");
      fruits.pop();
      alert("Updated array: " + fruits.join(", "));
    }

    function task7() {
      let nums = prompt("Enter numbers separated by comma:");
      if (!nums) return;
      let arr = nums.split(',').map(Number);
      let doubled = arr.map(n => n * 2);
      alert("Doubled: " + doubled.join(", "));
    }

    function task8() {
      let input = prompt("Enter a string:");
      alert("10th character: " + (input[9] || "Not available"));
    }

    function task9() {
      let arr = prompt("Enter array values separated by comma:");
      if (!arr) return;
      let splitArr = arr.split(',');
      alert("Last element: " + splitArr[splitArr.length - 1]);
    }

    function task10() {
      let items = ["a", "b", "c", "d"];
      items.splice(2, 1, "z");
      alert("Modified array: " + items.join(", "));
    }
  </script>


