<!-- TASK PAGES -->

<div id="p1" class="page">
<h3>1. Reverse String</h3>
<input id="r1"><button onclick="o1.innerText=r1.value.split('').reverse().join('')">Reverse</button>
<p id="o1"></p>
</div>

<div id="p2" class="page">
<h3>2. Extract 3rd & 4th Character</h3>
<input id="r2"><button onclick="o2.innerText=r2.value.slice(2,4)">Extract</button>
<p id="o2"></p>
</div>

<div id="p3" class="page">
<h3>3. Longest Word</h3>
<input id="r3"><button onclick="o3.innerText=r3.value.split(' ').sort((a,b)=>b.length-a.length)[0]">Find</button>
<p id="o3"></p>
</div>

<div id="p4" class="page">
<h3>4. Uppercase ↔ Lowercase</h3>
<input id="r4"><button onclick="o4.innerText=r4.value==r4.value.toUpperCase()?r4.value.toLowerCase():r4.value.toUpperCase()">Convert</button>
<p id="o4"></p>
</div>

<div id="p5" class="page">
<h3>5. Substring Index</h3>
<input id="r5"><input id="r5b">
<button onclick="o5.innerText=r5.value.indexOf(r5b.value)">Find</button>
<p id="o5"></p>
</div>

<div id="p6" class="page">
<h3>6. Count Words</h3>
<input id="r6"><button onclick="o6.innerText=r6.value.split(' ').length">Count</button>
<p id="o6"></p>
</div>

<div id="p7" class="page">
<h3>7. Array Third Element</h3>
<button onclick="o7.innerText=['Apple','Banana','Mango'][2]">Show</button>
<p id="o7"></p>
</div>

<div id="p8" class="page">
<h3>8. Last Array Element (Popup)</h3>
<button onclick="alert(['A','B','C'].pop())">Show</button>
</div>

<div id="p9" class="page">
<h3>9. 10th Character</h3>
<button onclick="alert(prompt('Enter string')[9])">Check</button>
</div>

<div id="p10" class="page">
<h3>10. Array Loop</h3>
<button onclick="o10.innerText=[1,2,3,4].join(', ')">Display</button>
<p id="o10"></p>
</div>

<div id="p11" class="page">
<h3>11. Map Double</h3>
<button onclick="o11.innerText=[1,2,3].map(x=>x*2)">Double</button>
<p id="o11"></p>
</div>

<div id="p12" class="page">
<h3>12. Remove Duplicates</h3>
<button onclick="o12.innerText=[...new Set([1,2,2,3])]">Remove</button>
<p id="o12"></p>
</div>

<div id="p13" class="page">
<h3>13. Splice Delete</h3>
<button onclick="let a=[1,2,3];a.splice(1,1);o13.innerText=a">Delete</button>
<p id="o13"></p>
</div>

<div id="p14" class="page">
<h3>14. Splice Insert</h3>
<button onclick="let a=[1,3];a.splice(1,0,2);o14.innerText=a">Insert</button>
<p id="o14"></p>
</div>

<div id="p15" class="page">
<h3>15. Calculator</h3>
<input id="a"><input id="b">
<button onclick="o15.innerText=+a.value + +b.value">+</button>
<button onclick="o15.innerText=a.value - b.value">-</button>
<button onclick="o15.innerText=a.value * b.value">*</button>
<button onclick="o15.innerText=a.value / b.value">/</button>
<p id="o15"></p>
</div>

