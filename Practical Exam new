<div id="p18" class="page"><h3>18. Multiply</h3><button onclick="alert(3*3)">Multiply</button></div>
<div id="p19" class="page"><h3>19. Divide</h3><button onclick="alert(10/2)">Divide</button></div>

<div id="p20" class="page">
<h3>20. 10-digit Mobile Validation</h3>
<input id="m"><button onclick="alert(/^\d{10}$/.test(m.value))">Check</button>
</div>

<div id="p21" class="page">
<h3>21. Detect Number/String</h3>
<input id="d"><button onclick="alert(isNaN(d.value)?'String':'Number')">Detect</button>
</div>

<div id="p22" class="page">
<h3>22. Only Numbers</h3>
<input id="n"><button onclick="alert(/^\d+$/.test(n.value))">Check</button>
</div>

<div id="p23" class="page">
<h3>23. Only Alphabets</h3>
<input id="al"><button onclick="alert(/^[A-Za-z]+$/.test(al.value))">Check</button>
</div>

<div id="p24" class="page">
<h3>24. Signup Form</h3>
<input id="u" placeholder="Name">
<button onclick="localStorage.setItem('user',u.value)">Submit</button>
</div>

<div id="p25" class="page">
<h3>25. Display Signup</h3>
<button onclick="alert(localStorage.getItem('user'))">Show</button>
</div>

<div id="p26" class="page">
<h3>26. Email Validation</h3>
<input id="e"><button onclick="alert(/^\S+@\S+\.\S+$/.test(e.value))">Check</button>
</div>

<div id="p27" class="page">
<h3>27. Person Object</h3>
<button onclick="p={name:'Alex',age:20,gender:'M'};alert(p.name)">Create</button>
</div>

<div id="p28" class="page">
<h3>28. Display Person</h3>
<button onclick="alert(JSON.stringify({name:'Alex',age:20,gender:'M'}))">Display</button>
</div>

<div id="p29" class="page">
<h3>29. Stopwatch</h3>
<p id="sw">0</p>
<button onclick="t=setInterval(()=>sw.innerText=++sw.innerText,1000)">Start</button>
<button onclick="clearInterval(t)">Stop</button>
</div>

